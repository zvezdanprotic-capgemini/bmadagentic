# Auto detect text files and perform LF normalization
* text=auto

# Documents
*.md text diff=markdown
*.txt text
*.json text
*.yaml text
*.yml text

# Source code
*.py text diff=python
*.ts text diff=typescript
*.tsx text diff=typescript
*.js text
*.jsx text
*.css text diff=css
*.html text diff=html

# Scripts
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Graphics
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore